{
  "compilerOptions": {
    "esModuleInterop": true,
    "types": [
      "jest",
      "node"
    ],
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "sourceMap": true,
    "suppressImplicitAnyIndexErrors": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}